{
  "expo": {
    "name": "WanderGuideAudioTours",
    "slug": "WanderGuideAudioTours",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/wander-guide-logo.png",
    "scheme": "WanderGuideAudioTours",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["audio"],
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses location to automatically play audio when you reach tour stops.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to automatically play audio when you reach tour stops."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/wander-guide-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.WanderGuideAudioTours",
      "permissions": [
        "WAKE_LOCK",
        "FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/wander-guide-logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/wander-guide-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3bda55bd-4e78-42bb-a18d-87a9fd17d2e7"
      }
    }
  }
}
